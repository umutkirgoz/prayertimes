{
    "name": "umutkirgoz/prayertimes",
    "description": "Fetches the prayer times",
    "keywords": ["muslim", "prayer", "Turkey"],
    "license": "MIT",
    "authors": [
        {
            "name": "Umut KIRGÃ–Z",
            "email": "umut.kirgoz@gmail.com"
        }
    ],
    "type": "library",
    "require": {
		"php": ">=7.0",
        "illuminate/support": "5.1.*",
        "guzzlehttp/guzzle": "~6.0",
        "symfony/dom-crawler": "2.7.*",
        "symfony/var-dumper": "2.7.*"
    },
    "require-dev": {
		"phpunit/phpunit": "6.*",
        "squizlabs/php_codesniffer": "3.*",
        "phpmd/phpmd": "@stable"
    },
    "autoload": {
        "psr-4": {
            "UmutKirgoz\\PrayerTimes\\": "src/"
        },
        "files": [
            "src/Helpers/helpers.php"
        ]
    },
    "scripts": {
        "phpcs-src": "./vendor/bin/phpcs --standard=PSR2 --exclude=PSR2.Classes.PropertyDeclaration,Generic.Files.LineLength src/",
        "phpcs-test": "./vendor/bin/phpcs --standard=PSR2 --exclude=PSR2.Classes.PropertyDeclaration,PSR1.Classes.ClassDeclaration,Generic.Files.LineLength,PSR1.Methods.CamelCapsMethodName tests/",
        "phpmd": "./vendor/bin/phpmd src/ text ./build/phpmd.xml",
        "phpunit-coverage": "php -d memory_limit=256M ./vendor/bin/phpunit --coverage-text --testsuite UnitTests",

        "test-all": [
            "@phpcs-src",
            "@phpcs-test",
            "@phpmd",
            "@phpunit-coverage"
        ]
    }
}
